<!DOCTYPE html>
<html>
  <head>
    <title>TODO EDIT</title>
    <link
      rel="stylesheet"
      type="text/css"
      href="/public/stylesheets/todo.css"
    />
  </head>
  <body>
    <div class="home">
      <button type="button" id="img" onclick="location.href='/'">
        <img src="../../public/images/home.png" width="70" />
      </button>
    </div>
    <h1 class="main-text">TODO LIST</h1>
    <hr />
    <br />

    <br />
    <ul class="list-box">
      <% var date = ""; 
         var next_date = ""; 
         todoTasks.forEach(tasks => { 
           date = (tasks.date).substring(0, 10); 
           if(date != next_date){ 
             next_date = date; 
             %>
      <% } if(tasks._id == idTask) { %>
      <li class="todo-item">
        <form action="/todo/update/<%= tasks._id %>" method="post">
          <input
            type="text"
            value="<%= tasks.title %>"
            name="title"
            id="edit-box"
            autocomplete="off"
          />
          <input
             id="end-time"
             class="input-time"
             value="<%= tasks.endTime %>"
             type="time"
             name="endTime"
             autocomplete="off"
          />
          <button type="submit" id="img">submit</button>
          <button type="button" id="img" onclick="location.href='/todo'">
            remove
          </button>
        </form>
      </li>

      <% }}); %>
    </ul>
  </body>
</html>
